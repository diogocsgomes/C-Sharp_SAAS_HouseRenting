@model Trabalho_Pratico_23_24.Models.Categorias
@{
    ViewData["Title"] = "Pesquisar";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="containerForm">
    <h1 class="PesquisaForm">Formulário de Pesquisa</h1>
    <form asp-controller="Habitacao" asp-action="Index" method="post">
        <label for="localizacao">Localização:</label>
        <input type="text" id="localizacao" name="localizacao" placeholder="Introduza a localização..." required />

        <label for="tipoHabitacao">Tipo de Habitação:</label>
        <input type="text" id="tipoHabitacao" name="tipoHabitacao" placeholder="Insira o tipo no formato T0, T1, T2 ..." required />

        <label for="dataInicio">Data de Início do Contrato:</label>
        <input type="date" id="dataInicio" name="dataInicio" required />

        <label for="dataFim">Data do Fim do Contrato:</label>
        <input type="date" id="dataFim" name="dataFim" required />

        <label for="periodoMinimo">Período Mínimo de Arrendamento:</label>
        <input type="number" id="periodoMinimo" name="periodoMinimo" placeholder="Introduza o período mínimo de arrendamento..." required />

        Filtrar por:
        <br />
        <select name="CategoriaId" asp-items="ViewBag.ListaCategorias">
            <option value="-1">Categoria</option>
        </select>

        <label for="locadorId">Locador:</label>
        <select name="locadorId" asp-items="ViewBag.ListaLocadores">
            <option value="">Todos os Locadores</option>
        </select>

        <select name="direcao">
            <option value="asc">Ascendente</option>
            <option value="desc">Descendente</option>
        </select>
        <br />
        <br />
        <label for="ordenarPorPreco">Ordenar por Avaliacao:</label> <input type="checkbox" id="ordenarPorAvaliacao" name="ordenarPorAvaliacao" value="true" />

        <label for="ordenarPorPreco">Ordenar por Preço:</label> <input type="checkbox" id="ordenarPorPreco" name="ordenarPorPreco" value="true" />
        <br />
        <br />
        <button type="submit">Pesquisar</button>
    </form>

</div>


