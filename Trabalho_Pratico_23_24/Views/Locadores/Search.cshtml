@model PesquisaLocadorViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1>Locadores</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>


<p>
    <form asp-action="Search" method="post" accept-charset="UTF-8">
        <label>Pesquisa de Cursos</label>
        <input type="text" placeholder="Curso a pesquisar" name="TextoAPesquisar" />
        <button type="submit">Pesquisar</button>
    </form>



</p>

<p>
    <a asp-action="Index">Todos</a> |
    <a asp-action="Index" asp-route-disponivel="true">Activos</a> |
    <a asp-action="Index" asp-route-disponivel="false">Inativos</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ListaDeLocadores[0].Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListaDeLocadores[0].N_Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListaDeLocadores[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListaDeLocadores[0].Ativo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ListaDeLocadores) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.N_Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
